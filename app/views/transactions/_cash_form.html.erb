<%= simple_form_for [@portfolio,@position,@transaction] do |f| %>
  <%= render 'shared/generic_error', object: f.object %>
  <%# render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :tr_type, value: CASH_TR %>
  <!-- rest is set in the model -->

  <div class="row">
  <div class="col-md-4">
  <%= f.input :cash, label:'Amount', hint: "Deposit/Withdrawal Amount" %>
  </div>
  <div class="col-md-8">
  <%= f.input :note %>
  </div>
  </div>

  <div class="row">
  <div class="col-md-12">
  <%= f.input :date, value: Time.now, html5: true %>
  </div>
  </div>

  <div class="pt-3">
  <%= f.submit 'Save Cash Transaction', class: "btn btn-info" %>
  </div>

<% end %>

