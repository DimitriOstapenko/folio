<%= simple_form_for [@portfolio,@position,@transaction] do |f| %>
  <%= render 'shared/generic_error', object: f.object %>

  <%= f.hidden_field :tr_type, value: CASH_TR %>

  <div class="row">
  <div class="col-md-4">
  <%= f.input :qty, hint: "Deposit/Withdrawal Amount" %>
  </div>
  <div class="col-md-4">
  <%= f.input :date, value: Date.today %>
  </div>
  <div class="col-md-4">
  <%= f.input :note %>
  </div>
  </div>

  <div class="row">
  <div class="col-md-12">
  <%= f.submit 'Save Cash Transaction', class: "btn btn-primary btn-block" %>
  </div>
  </div>

<% end %>

