    <th><%= to_currency @portfolio.fees, locale: @portfolio.locale %></th>
    <th><%= to_currency @portfolio.gain, locale: @portfolio.locale %></th>
    <th colspan=6></th>
  </tfoot>
</table>

<%= will_paginate @transactions, class: "btn" %>

</div>
