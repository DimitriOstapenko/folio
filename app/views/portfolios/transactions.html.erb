<div class="container-fluid">

<%= render "header" %>  
<table class="tbl2 table-hover table-striped table-bordered"> <!--class="table table-hover table-condensed" > -->
  <thead>
      <tr>
        <th class="text-center">Date</th>
        <th class="text-center">Symbol</th>
        <th class="text-center">Type</th>
        <th class="text-center">Quantity</th>
        <th class="text-center">Price</th>
        <th class="text-center">Amount</th>
        <th class="text-center">Comm.</th>
        <th class="text-center">Cap Gain</th>
        <th class="text-center">Share Balance</th>
        <th class="text-center">ACB</th>
        <th class="text-center">ACB/Share</th>
        <th class="text-center">Cash</th>
        <th class="text-center">Notes</th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>

<%# render partial: "transaction", collection: @transactions %>
<%= render  @transactions %>

 </tbody>
  <tfoot>
    <th colspan=3>Totals in <%= @portfolio.currency_str %></th>
    <th class="text-center"></th>
    <th colspan=2></th>
    <th class="text-center"><%= to_currency @portfolio.fees, locale: @portfolio.locale %></th>
    <th class="text-center"><%= to_currency @portfolio.gain, locale: @portfolio.locale %></th>
    <th colspan=3></th>
    <th class="text-center"><%= sprintf "%.2f", @portfolio.cash, locale: @portfolio.locale %></th>
    <th colspan=3></th>
  </tfoot>
</table>

<%= will_paginate @transactions, class: "btn" %>

</div>
